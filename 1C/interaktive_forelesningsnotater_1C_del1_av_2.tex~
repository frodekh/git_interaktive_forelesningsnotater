\renewcommand{\headline}{Inklinasjon}

{
\setbeamercolor{background canvas}{bg=blue}
\begin{frame}
\label{nytema3}
\hyperlink{mp5}{\pagebutton{\small Forrige side}}
\nytemaside{formorkelser}
\hyperlink{mp6}{\pagebutton{Neste side}}
\end{frame}
