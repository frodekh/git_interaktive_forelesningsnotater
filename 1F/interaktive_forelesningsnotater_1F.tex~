\renewcommand{\headline}{\small Galaktiske rotasjonskurver}
{
\setbeamercolor{background canvas}{bg=blue}
\begin{frame}
\label{nytema2}
\hyperlink{partikler6}{\pagebutton{\small Forrige side}}
\nytemaside{morkmat}
\hyperlink{rotkurv0}{\pagebutton{Sett igang!}}
\end{frame}
